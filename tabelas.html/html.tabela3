                        <td class="actions">
                            <button class="btn btn-view">Detalhes</button>
                            <button class="btn btn-edit">Editar</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="id-column">8002</td>
                        <td class="client-id-column">1002</td>
                        <td class="date-column">16/05/2023 10:15</td>
                        <td class="value-column">R$ 890,50</td>
                        <td><span class="payment-method payment-pix">PIX</span></td>
                        <td class="actions">
                            <button class="btn btn-view">Detalhes</button>
                            <button class="btn btn-edit">Editar</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="id-column">8003</td>
                        <td class="client-id-column">1003</td>
                        <td class="date-column">17/05/2023 16:45</td>
                        <td class="value-column">R$ 2.340,00</td>
                        <td><span class="payment-method payment-boleto">Boleto</span></td>
                        <td class="actions">
                            <button class="btn btn-view">Detalhes</button>
                            <button class="btn btn-edit">Editar</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="id-column">8004</td>
                        <td class="client-id-column">1004</td>
                        <td class="date-column">18/05/2023 09:20</td>
                        <td class="value-column">R$ 550,00</td>
                        <td><span class="payment-method payment-dinheiro">Dinheiro</span></td>
                        <td class="actions">
                            <button class="btn btn-view">Detalhes</button>
                            <button class="btn btn-edit">Editar</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="id-column">8005</td>
                        <td class="client-id-column">1005</td>
                        <td class="date-column">19/05/2023 11:30</td>
                        <td class="value-column">R$ 1.780,00</td>
                        <td><span class="payment-method payment-cartao">Cartão</span></td>
                        <td class="actions">
                            <button class="btn btn-view">Detalhes</button>
                            <button class="btn btn-edit">Editar</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="id-column">8006</td>
                        <td class="client-id-column">1001</td>
                        <td class="date-column">20/05/2023 15:10</td>
                        <td class="value-column">R$ 3.210,00</td>
                        <td><span class="payment-method payment-pix">PIX</span></td>
                        <td class="actions">
                            <button class="btn btn-view">Detalhes</button>
                            <button class="btn btn-edit">Editar</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <div class="footer">
            <p>Sistema de Gestão de Vendas &copy; 2023 | Desenvolvido para otimizar o controle de transações comerciais</p>
        </div>
    </div>
</body>
</html>
